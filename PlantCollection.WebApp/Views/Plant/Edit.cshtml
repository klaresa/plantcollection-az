@model PlantCollection.Domain.Model.Entities.Plant

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Plant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BinomialName" class="control-label"></label>
                <input asp-for="BinomialName" class="form-control" required />
                <span asp-validation-for="BinomialName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genus" class="control-label"></label>
                <input asp-for="Genus" class="form-control" />
                <span asp-validation-for="Genus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUri" class="control-label"></label>
                <input type="file" asp-for="ImageUri" class="form-control" accept=".jpg" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
